{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/vite"
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}